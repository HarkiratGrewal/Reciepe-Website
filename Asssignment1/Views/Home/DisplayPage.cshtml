<body>
    <!--Jumbotron-->
    <div class="jumbotrons">
        <div class="jumbotron jumbotron-fluid">
            <div class="center-block">
                <div class="card text-center">
                    <div class="card-body">
                        <h2>Dispay Page</h2>
                        <h3>Reciepes are displayed here.</h3>
                    </div>
                </div>
            </div>
        </div>

        <!--Rendering model data from partial view.-->
        @*@{ Html.RenderPartial("_ReciepeResult"); }*@

        <!--1st reciepe-->
        <div class="jumbotrons">
            <div class="jumbotron jumbotron-fluid">

                <!--Data from stored values-->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Reciepe Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var a in Model)
                            {
                                <tr>
                                    <td>Reciepe #@i</td>
                                    <th scope="row">@a.reciepeName</th>
                                    <!--Displaying only name in data page-->
                                    <td>@a.reciepeIngredients</td>
                                    <td>@a.reciepeProcedure</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!--Jombotron end-->
</body>
