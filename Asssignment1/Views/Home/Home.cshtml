@{
    ViewBag.Title = "Home";
    Layout = null;
}

<!Doctype html>
<html>
<div class="alignment">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>HomePage</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
        <link rel="stylesheet" href="~/css/custom.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/bootstrap-4.0.0/dist/css/bootstrap.min.css" />

        <!--Bootstrap javascript links-->

        <!--Should be removed if layout is added-->
        <!--Navbar-->
        <nav class="nav nav-tabs">
            <div class="container">
                <div class="navbar-header">
                    <div class="float-lg-right">
                        <button class="nav-item"><a asp-controller="Home" asp-action="LoginPage">Login</a></button>
                    </div>
                </div>
                <div class="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right"></ul>
                </div>
            </div>
        </nav>
        <!--Navbar Ending-->
        <!--Should be removed if layout is added-->

    </head>

    <body>

        <!--Jumbotron-->
        <div class="jumbotrons">
            <div class="jumbotron jumbotron-fluid">
                <div class="center-block">
                    <div class="card text-center">
                        <div class="card-body">
                            <h2>Login to your Portal</h2>
                            <h3>@ViewBag.Greeting Chefs</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!--Corousal-->
            <div class="jumbotron" id="corousel">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/Home_image1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Home_image2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/Home_image3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <!--Corousal End-->
        <!--Jombotron end-->
        <!-- Footer -->
        <footer class="page-footer font-small blue">

            <!-- Copyright -->
            <div class="footer-copyright text-center py-3">
                © 2018 Copyright:
                <a href="https://portfolioharkiratgrewal.herokuapp.com/"> Harkirat Singh Grewal</a>
            </div>
            <!-- Copyright -->

        </footer>
        <!-- Footer -->
        <!--Bootstrap Javascripts-->
        <script src="~/lib/Popper.js/popper.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap-4.0.0/bootstrap-4.0.0/js/dist/carousel.js"></script>
        <script src="~/lib/bootstrap-4.0.0/bootstrap-4.0.0/js/dist/util.js"></script>

    </body>
</div>
</html>
</html>